{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "ADMIN_EMAIL",
    "ADMIN_PASSWORD",
    "CUSTODIAN_NAME",
    "CUSTODIAN_EMAIL",
    "DEMO_EMAIL",
    "DEMO_PASSWORD",
    "HOST_URL",
    "JWT_REFRESH_SECRET",
    "JWT_SECRET",
    "MONGO_URL",
    "NODE_ENV",
    "PROD",
    "PORT",
    "SITE_NAME",
    "SMTP_HOST",
    "SMTP_PASSWORD",
    "SMTP_PORT",
    "SMTP_USER"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
